<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_view_production_lot_form_qualifier" model="ir.ui.view">
        <field name="name">inherited_view_production_lot_form_qualifier</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[@name='main_group']/group/field[@name='ref']" position="before">
                <field name="qualifier_id"/>
            </xpath>
        </field>
    </record>

    <record id="inherited_view_picking_form_lot_form_qualifier" model="ir.ui.view">
        <field name="name">inherited_view_picking_form_lot_form_qualifier</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="qualifier_id"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='operations']/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="product_avalaible_stock"/>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock.action_product_stock_view">
        <field name="context">{'default_detailed_type': 'product', 'search_default_filter_user_location': 1}</field>
    </record>

</odoo>